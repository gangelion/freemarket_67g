.box
  .header
    = link_to image_tag("/images/logo/logo.png", width: '120px', alt: "logo1"),root_path

  .content
    .content__login
      .content__login__account
        %p アカウントをお持ちでない方はこちら
        = link_to new_signup_path do
          新規会員登録
      .content__login__api
        .content__login__api__facebook
          = link_to "#" do
            Facebookでログイン
        .content__login__api__google
          = link_to "#" do
            Googleでログイン
      .content__login__form
        = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
          .content__login__form__box
            .form__email
              = f.text_field :email, placeholder: "メールアドレス", class: "email__text"
            .form__passward
              = f.text_field :password, placeholder: "パスワード", class: "passward__text"
            .form__check
              .form__check__box
                = f.text_field :checkbox, type: "checkbox", class: "check__btn"
              .form__check__text
                私はロボットではありません
          .content__login__form__button
            = f.submit "ログイン"
          .content__login__form__passward
            = link_to "#" do
              パスワードをお忘れの方

  .footer
    .footer__box
      .footer__box__text
        プライバシーポリシー
      .footer__box__message
        メルカリ利用規約
      .footer__box__form
        特定商取引に関する表記
    .footer__logo
      mercari
      .footer__logo__text
        © Mercari, Inc.