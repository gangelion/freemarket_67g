  .header
    部分テンプレート
  .products
    .products__name
      = @product.name
    .contents
      
      .first_content
        -# = @products.images.image
        .first_content_image= image_tag '/yakiniku.jpg', alt: "test", id: 'image1'
        %ul.sub_image 
          %li= image_tag '/yakiniku.jpg', alt: "test1", class: 'image1'
          %li= image_tag '/images.jpg', alt: "test2", class: 'image2'
          %li= image_tag '/images2.jpg', alt: "test3", class: 'image3'
          %li= image_tag '/images3.jpg', alt: "test4", class: 'image4'
      .price
        = @product.price
        円
        .price__payer
          .price__payer__tax
            (税込）
          .price__status__postage
            送料込み
        
      - if user_signed_in? && current_user.id == @product.user_id
        .buy
          .edit-btn
            = link_to '編集する',"/products/#{@product.id}/edit", class: 'edit'
        .buy
          .delete-btn
            = link_to 'この商品を削除する', "#{@product.id}", method: :delete, class:'delete'
      - else
        .buy
          = link_to '購入画面に進む', '/products/confirm/:id', class: 'buy_btn'
      .second_content
      商品コメントだよ
      .products_info
        %table
          %tr
            %th
              出品者
            %td
              = @product.seller
          %tr
            %th
              カテゴリー
            %td
              = @product.category
          %tr
            %th
              商品のサイズ
            %td
              = @product.size
          %tr
            %th
              商品の状態
            %td
              = @product.condition
          %tr
            %th
              配送料の負担
            %td
              -# = @product.payer
          %tr
            %th
              発送元地域
            %td
              = @product.shippingaddress
          %tr
            %th
              配送状態
            %td
              -# = @product.status
          %tr
            %th
              発送予定日数
            %td
              = @product.shippingdate
      .option
        %ul.likes
          %i.fas.fa-star
          %li お気に入り 0
        %ul.report
          %i.fas.fa-flag
          %li 不適切な商品の通報

    .comment
