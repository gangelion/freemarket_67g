.main
  .main__top
    .main__top__header
      %h2 人気のカテゴリー
    .main__top__pickups
      %li レディース
      %li メンズ
      %li 家電・スマホ

  %h3 レディース新着アイテム
  = link_to "もっと見る ＞","#", class:"more"
  - if @product.blank?
    .first 
  - else
    .first 
      - @product[0..4].each do |product|
        .first__contents
          .first__contents__box
            = link_to '', product_path(product.id), class: 'first__contents__box__link'
            .first__contents__box__img
              = image_tag product.images[0].image_url
            .first__contents__box__name
              = product.name
            .first__contents__box__price
              = "#{product.price}円"
            .first__contents__header
              .first__contents__header__name
              .first__contents__header__more
  - if @product[5..9].present?              
    .first
      - @product[5..9].each do |product|
        .first__contents
          .first__contents__box
            = link_to '', product_path(product.id), class: 'first__contents__box__link'
            .first__contents__box__img
              = image_tag product.images[0].image_url
            .first__contents__box__name
              = product.name
            .first__contents__box__price
              = "#{product.price}円"
            .first__contents__header
              .first__contents__header__name
              .first__contents__header__more
              
  %h3 メンズ新着アイテム
  = link_to "もっと見る ＞","#", class:"more"
  .second__contents
    .second__contents__header
    .second__contents__content
      .second__contents__content__img
      .second__contents__content__text-box
    .second__contents__price-box
      .second__contents__box
        .second__contents__header
          .second__contents__header__name
          .second__contents__header__more


  %h3 家電・スマホ新着アイテム
  = link_to "もっと見る ＞","#", class:"more"
  .main__contents
    .main__contents__header
    .main__contents__content
      .main__contents__content__img
      .main__contents__content__text-box
    .main__contents__price-box
      .main__contents__box
        .main__contents__header
          .main__contents__header__name
          .main__contents__header__more

