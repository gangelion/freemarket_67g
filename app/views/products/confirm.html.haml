//ヘッダー部分テンプレートに差し替え
.header2
  mercari
.buy-main
  .buy-main__container
    .buy-main__container__header
      購入内容の確認
    .buy-main__container__content
      .first_content
        = image_tag @product.images[0].image_url, id: "main_image"
      .sub_image
        - @product.images.each_with_index do |image, i|
          .sub_image_content
            = image_tag image.image_url, id: "image#{i+1}"



    .buy-main__container__status
      .buy-main__container__status__price
        %ul
          %h1.pay_price 支払い金額
          %li
            = @product.price
            %span 円 （税込）送料込み
      .buy-main__container__status__payment
        %ul
          %h3.method_payment 支払い方法  
          - if @card.blank?
            = link_to "カードを登録してください", new_credit_path, class: "create_credit_card_btn"
          -else
            クレジットカードを利用する
          
      .buy-main__container__status__delivery
        %ul
          %h3 配送先
          %li
          =link_to '#' do
            %span 登録してください
      .buy-main__container__status__btn
        %ul
          %li
            = form_tag(controller: :credits, action: :pay, method: :post) do
              %button 購入する
          %li
            = link_to "TOPへ戻る", root_path, class: 'confirm_home_btn'


