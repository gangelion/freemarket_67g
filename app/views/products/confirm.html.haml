//ヘッダー部分テンプレートに差し替え
.header
  %a mercari
.buy-main
  .buy-main__container
    %h2.buy-main__container__header 購入内容の確認
    .buy-main__container__content
      .buy-main__container__content__inner
        .buy-main__container__content__inner__item-box
          %h3
            =link_to image_tag("/images/pict/sample-cat.png",width: '120px', alt: "logo2")
          .buy-main__container__content__inner__item-box__price-box
            %p.buy-main__container__content__inner__item-box__price-box__name
              【未使用品】宇宙で拾った猫 ＃激レア
              .buy-main__container__content__inner__item-box__price-box__price
                %span ¥000000
                %span （税込）送料込み
    .buy-main__container__status
      .buy-main__container__status__price
        %ul
          %h1 支払い金額
          %li 00000円
      .buy-main__container__status__payment
        %ul
          %h3 支払い方法
          %li
          =link_to '#' do
            %span 登録してください
      .buy-main__container__status__delivery
        %ul
          %h3 配送先
          %li
          =link_to '#' do
            %span 登録してください
      .buy-main__container__status__btn
        %ul
          %li
            = link_to "購入する", root_path, class: ''
